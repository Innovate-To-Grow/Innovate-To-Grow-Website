# Django Settings
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DEBUG=False

# Database Settings
DB_ENGINE=django.db.backends.postgresql
DB_NAME=innovate_to_grow
DB_USER=user
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# AWS Settings (Optional - for S3 storage)
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_ENDPOINT_URL=
# AWS_S3_CUSTOM_DOMAIN=

# Notification Providers
# Options: console, gmail, smtp
EMAIL_PROVIDER=console
SMS_PROVIDER=console

# SMTP Configuration
# Primary: SMTP credentials are managed via GoogleGmailAccount in the admin panel.
# Fallback: If no GoogleGmailAccount exists in the database, these env vars are used:
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=your-gmail@gmail.com
# EMAIL_SMTP_PASS=your-google-app-password
DEFAULT_FROM_EMAIL=noreply@example.com

# Redis (Optional)
# REDIS_URL=redis://127.0.0.1:6379/1

# Frontend URL (for Live Preview)
# FRONTEND_URL=https://www.innovatetogrow.com

# Google Sheets (service account JSON as a single-line JSON string)
# GOOGLE_SHEETS_CREDENTIALS_JSON={"type":"service_account",...}
# GOOGLE_SHEETS_SCOPES=https://www.googleapis.com/auth/spreadsheets.readonly
